@model RegisterViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_Layout.cshtml";
}
<div class="text-center">
    <span class="col-xs-12">
        <img src="/img/logo.png" width="500" height="500" />
    </span>
    <h1>Welcome to The Game Shop!</h1>
</div>
<div class="text-center padTop10">
    <h6>&copy;Kristian Kerrigan - Casestudy</h6>
    <br />
    <h4>@ViewBag.Message</h4>
</div>
<!-- modal code -->
<div class="modal" id="register_popup">
    <div class="modal-dialog">
        <div class="modal-content col-xs-12">
            <div class="modal-header">
                <a href="" style="font-size:xx-large" data-dismiss="modal" class="pull-right">X</a>
                <div class="text-center">
                    <span class="col-xs-12">
                        <img src="/img/logo.png" />
                    </span>
                    <h3>Please Register!</h3>
                </div>
            </div>
            <div class="modal-body loginbody" style="background-color:lightskyblue;">
                <form asp-controller="Register" asp-action="Register" method="post" class="form-horizontal" role="form" id="registerForm">
                    <div class="tabbable" id="myTabs">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#personal" data-toggle="tab">Demographic</a></li>
                            <li><a href="#address" data-toggle="tab">Address</a></li>
                            <li><a href="#account" data-toggle="tab">Account</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="personal">
                                <div class="form-group" style="padding-left:5%;padding-top:5%;">
                                    <label asp-for="Firstname" class="col-xs-4 control-label">First Name:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Firstname" class="form-control" placeholder="First Name" />
                                        <span asp-validation-for="Firstname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group" style="padding-left:5%;">
                                    <label asp-for="Lastname" class="col-xs-4 control-label">Last Name:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Lastname" class="form-control" placeholder="Last Name" />
                                        <span asp-validation-for="Lastname" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group" style="padding-left:5%;">
                                    <label asp-for="Age" class="col-xs-4 control-label">Age:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Age" class="form-control" type="number" maxlength="5" size="5" style="width: 100px;" id="Age" />
                                        <span asp-validation-for="Age" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group" style="padding-left:5%;">
                                    <label asp-for="CreditcardType" class="col-xs-4 control-label">Credit Card Co.</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <select asp-for="CreditcardType" class="form-control">
                                            <option>Visa</option>
                                            <option>Master Card</option>
                                        </select>
                                        <span asp-validation-for="CreditcardType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="address">
                                <div class="form-group" style="padding-top:5%;">
                                    <label asp-for="Address1" class="col-xs-4 control-label">Address 1:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Address1" class="form-control" placeholder="Enter Address" />
                                        <span asp-validation-for="Address1" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="City" class="col-xs-4 control-label">City:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="City" class="form-control" placeholder="Enter City" id="City" />
                                        <span asp-validation-for="City" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Region" class="col-xs-4 control-label">Region:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Region" class="form-control" placeholder="Enter Region" id="Region" />
                                        <span asp-validation-for="Region" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Country" class="col-xs-4 control-label">Country:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <select asp-for="Country" class="form-control" id="Country">
                                            <option>Canada</option>
                                            <option>United States</option>
                                            <option>Mexico</option>
                                        </select>
                                        <span asp-validation-for="Country" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mailcode" class="col-xs-4 control-label">Mailcode:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Mailcode" class="form-control" placeholder="Enter Mailcode" id="Mailcode" />
                                        <span asp-validation-for="Mailcode" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="account">
                                <div class="form-group" style="padding-top:5%;">
                                    <label asp-for="Email" class="col-xs-4 control-label">Email:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Email" type="email" class="form-control" placeholder="Enter valid Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Password" class="col-xs-4 control-label">Password:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="RepeatPassword" class="col-xs-4 control-label">Repeat Password:</label>
                                    <div class="col-xs-7" style="padding-left:5%;">
                                        <input asp-for="RepeatPassword" type="password" class="form-control" placeholder="Enter same password" />
                                        <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-xs-12 text-center">
                                        <button type="submit" class="btn btn-success form-control">Register!</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div><!-- modal-body -->
            <div class="modal-footer" id="footer" style="background-color:lightskyblue;">
                <h4>@ViewBag.Message</h4>
            </div><!-- modal-footer-->
        </div><!--modal-content-->
    </div><!--modal-dialog-->
</div><!--modal-->